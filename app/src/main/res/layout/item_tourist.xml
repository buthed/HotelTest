<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/hotel_about_rounded_corners"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingHorizontal="16dp"
        android:paddingVertical="13dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/booking_tourist_one"
                android:textSize="@dimen/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/booking_add_tourist_button"
                    android:background="@drawable/icon_add_rounded_corners"
                    android:backgroundTint="@color/room_details"
                    android:layout_width="32dp"
                    android:layout_height="32dp">

                    <ImageView
                        android:src="@drawable/icon_arrow"
                        android:rotation="90"
                        android:padding="10dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/tourist_expand_part"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_name"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_name"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_name_second"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_name_second"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_date_of_birth"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_date_of_birth"
                    android:inputType="date"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_citizenship"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_citizenship" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_passport_number"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_passport_number"
                    android:inputType="numberSigned"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="8dp"
                style="@style/BookingInputLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/booking_tourist_name_passport_validity_period"
                    android:text=""
                    style="@style/BookingEditText"
                    android:hint="@string/booking_tourist_name_passport_validity_period"
                    android:inputType="date"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>